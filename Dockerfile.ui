# React UI Dockerfile
FROM hub.mirror.mojtabavi.dev/node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy application code
COPY . ./

# Expose Vite dev server port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
